<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar">


    </include>

    <TextView
        android:id="@+id/textView"
        android:layout_width="243dp"
        android:layout_height="31dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="477dp"
        android:background="@color/mainColor"
        android:text="@string/header"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="1400dp"
        android:background="@color/background"
        app:itemIconTint="@color/black"
        app:itemRippleColor="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_navigation">


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="225dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:text="@string/Meal1"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="224dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="125dp"
        android:text="@string/Meal2"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="16dp"
        android:background="@color/fieldcolor"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/Hint1"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="25dp"
        android:background="@color/fieldcolor"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/Hint2"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="130dp"
        android:text="@string/Meal3"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine3"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextMultiLine3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

    <EditText
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="45dp"
        android:background="@color/fieldcolor"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/Hint3"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="277dp"
        android:layout_height="62dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@color/mainColor"
        android:background="@drawable/rounded"
        android:text="@string/BTN"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>